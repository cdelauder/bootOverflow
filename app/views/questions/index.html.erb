<h1>Your Questions</h1>
<%= link_to 'Post a new question', new_question_path %>
<br>
<br>

<% @questions.each do |question| %>
<p><%= '*'*100 %></p>
<div class="questions">
  <h2><%= question.title  %>:
    <span>
      created by <%= question.user.username %>
      <%= link_to 'Delete', question_path(question), :method => :delete %>
      <%= link_to 'Edit', edit_question_path(question) %>
    </span>
  </h2>
  <h3><%= question.content  %><span> <%= link_to 'Answer', new_question_answer_path(question, @answer) %></span></h3>
</div>
<p><%= '*'*100 %></p>

<!-- Creating the list of comments -->
<% question.answers.each do |answer| %>
<div class="answers">
  <p><%= answer.content %>
    <span>
      <%= link_to "edit", edit_question_answer_path(question, answer) %>
      <%= link_to "delete", question_answer_path(question, answer), :method => :delete %>
    </span>
  </p>
</div>
<% end %>

<% end %>